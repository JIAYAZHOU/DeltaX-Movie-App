    <script>
        $('.dropdown').hover(function () {
            $('.dropdown-toggle', this).trigger('click');
        });

       

        function delact(id) {

            $(".delact").confirm({
                text: "Are you sure you want to delete that Movie? <br/>",

                title: "Delete Confirmation",
                confirm: function (button) {
                    // delete();

                    $.ajax(
                   {
                       url: "/Films/Delete",
                       type: "GET",
                       data: { "id": id },
                       success: function (data) {
                           location.reload();
                       },
                       error: function (result) {
                           alert("Failed");
                       }
                   })
                },
                cancel: function (button) {
                    // nothing to do
                },
                confirmButton: "Yes I am",
                cancelButton: "No",
                post: true,
                confirmButtonClass: "btn-danger",
                cancelButtonClass: "btn-default",
                dialogClass: "modal-dialog modal-lg" // Bootstrap classes for large modal
            });
        }


        function Details(id) {
            $.ajax(
                {
                    url: "/Films/Details",
                    // type: "GET",
                    datatype: "html",
                    data: { "id": id },
                    success: function (data) {
                        $("#det").html(data);
                    }
                }
                );
        }

      

        function addfav(data) {
            
            if(@Session["ID"]!=null)
            {
                var dat = {
                    "Id": @Session["ID"],
                    "MovieID": data
                };
                //alert(dat.Id);
                // alert(dat.MovieID);

                $.ajax({
                    // url: "/Actors/ACreatee",
                    url: "/Favourites/Create",

                    type: "POST",
                    datatype: "JSON",
                    data: dat,
                      success: function (response) {
                            if (response != null && response.success) {
                                alert("Successfully added movie to favourites!!");
                            } else {
                                alert("You've already added this movie to your favourites!");
                            } 
                    },
                    failure: function (data) {
                        alert("Unable to add to Favourites");

                    }
                })
                //alert("http://www.omdbapi.com/?i=" + data + "&plot=short&r=json");
            }
            else
            {
                alert("Kindly Login to set favourites!");
            }
        }





    </script>


